<?xml version="1.0" encoding="UTF-8"?>
<com.our.coolgroup.artist.snapscrollview.McoyScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/product_scrollview"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#f1f1f5"
    android:fadeScrollbars="true"
    android:fillViewport="true"
    android:focusable="false">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#ffffff"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivHeader_shopping_first"
            android:layout_width="match_parent"
            android:layout_height="180dp"
           />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvName_shopping_first"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:text="123"
                android:textColor="#000000"
                android:textSize="30dp"/>

            <ImageView
                android:id="@+id/ivSave_shopping_first"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="40dp"
                android:src="@mipmap/btn_product_like_unselected"/>

            <ImageView
                android:id="@+id/ivShare_shopping_first"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:scaleType="centerCrop"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/btn_product_share"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout1_shopping"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:paddingLeft="20dp"
            android:paddingTop="5dp">

            <ImageView
                android:id="@+id/iv_V_shopping"
                android:layout_width="18dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/ic_tag_designer"/>

            <ImageView
                android:id="@+id/iv_Video_shopping"
                android:layout_width="18dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/ic_tag_video"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="3dp"
            android:paddingLeft="20dp"
            android:paddingTop="3dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥"
                android:textColor="#e6a743"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/tvMoney_shopping"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123"
                android:textColor="#e6a743"
                android:textSize="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout2_shopping"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="3dp"
            android:paddingLeft="20dp"
            android:paddingTop="3dp">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/ic_tag_product_details"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:text="包邮"
                android:textSize="10dp"/>

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:src="@mipmap/ic_tag_product_details"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:text="15天无理由"
                android:textSize="10dp"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="5dp"
            android:background="#e6e6e6"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设计品牌:"
                android:textColor="#000000"
                android:textSize="15dp"/>

            <TextView
                android:id="@+id/tvStyle_shopping_first"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="123"
                android:textColor="#000000"
                android:textSize="15dp"/>

            <ImageView
                android:id="@+id/iv_nextStyle_shopping"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="20dp"
                android:clickable="true"
                android:onClick="onClick"
                android:paddingRight="20dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/icon_enter"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#e6e6e6"/>

        <TextView
            android:id="@+id/tvMessage_shopping_first"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:paddingTop="25dp"
            android:text="匠物"
            android:textSize="12dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:text="- - - - 上拉查看图文详情 - - - -"
            android:textSize="10dp"
            />


    </LinearLayout>

</com.our.coolgroup.artist.snapscrollview.McoyScrollView>