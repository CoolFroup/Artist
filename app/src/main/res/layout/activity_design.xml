<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff000000"
    tools:context="com.our.coolgroup.artist.activity.DesignActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:onClick="backToSecond"
            android:src="@mipmap/ic_cancel"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/canyin_designType"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="10dp"
                android:background="@drawable/btn_selector_1"
                android:clickable="true"
                android:onClick="onTouchClick"/>

            <ImageView
                android:id="@+id/bangong_designType"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="10dp"
                android:background="@drawable/btn_selector_2"
                android:clickable="true"
                android:onClick="onTouchClick"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/yishu_designType"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="10dp"
                android:background="@drawable/btn_selector_3"
                android:clickable="true"
                android:onClick="onTouchClick"/>

            <ImageView
                android:id="@+id/jiudian_designType"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="10dp"
                android:background="@drawable/btn_selector_4"
                android:clickable="true"
                android:onClick="onTouchClick"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/shenghuo_designType"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="10dp"
                android:background="@drawable/btn_selector_5"
                android:clickable="true"
                android:onClick="onTouchClick"/>

            <ImageView
                android:id="@+id/lingshou_designType"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="10dp"
                android:background="@drawable/btn_selector_6"
                android:clickable="true"
                android:onClick="onTouchClick"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/gonggong_designType"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="10dp"
                android:background="@drawable/btn_selector_7"
                android:clickable="true"
                android:onClick="onTouchClick"/>

            <ImageView
                android:id="@+id/qita_designType"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="10dp"
                android:background="@drawable/btn_selector_8"
                android:clickable="true"
                android:onClick="onTouchClick"/>
        </LinearLayout>

    </LinearLayout>

    <com.our.coolgroup.artist.customview.MySeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:max="100"
        android:progress="20"/>


</RelativeLayout>
